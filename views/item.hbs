<h1 id="itemTitle">{{this.itemName}}</h1>

<div class="row">
  <div class="col-sm-4 col-lg-4 col-md-4 itemBox">
    <div class="thumbnail">
      <img src={{this.imageLink}} alt="">
      <div class="caption">
        <h4 class="pull-right">${{this.value}}</h4>
        <h4><a href="#">{{this.itemName}}</a>
        </h4>
        <p>{{this.description}}</p>
      </div>
    </div>
  </div>
</div>

<!-- /.container -->

<div class="container">

  <hr>

  <!-- Footer -->
  <footer>
    <div class="row">
      <div class="col-lg-12 footer">
        <p>Copyright &copy; SwapShop 2017</p>
      </div>
    </div>
  </footer>

</div>
<!-- /.container -->